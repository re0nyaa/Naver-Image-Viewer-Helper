{
    "manifest_version": 3,
    "name": "Naver Cafe Image Viewer Helper",
    "version": "1.0",
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://cafe.naver.com/common/storyphoto/viewer.html*"
            ],
            "js": ["content.js"]
        }
    ]
}
